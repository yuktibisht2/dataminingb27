<mvc:View controllerName="app.dataminingb27.controller.DetailView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form">
    <Page id="idDetail" title="{i18n>Detailtitle}" showNavButton="true" navButtonPress="onMasterView">
        <f:SimpleForm editable="true" layout="ResponsiveGridLayout">
           
           
<f:content>
                            <Label text="{i18n>LocationId}" required="true"></Label>
                            <Text text="{CustomerModel>LocationId}"></Text>
                            <Label text="{i18n>LocationDescription}" required="true"></Label>
                            <Text  text="{CustomerModel>LocationDescription}"></Text>
                            <Label text="{i18n>AllocatedMiningResource}" required="true"></Label>
                            <Text  text="{CustomerModel>AllocatedMiningResource}"></Text>
                            <Label text="{i18n>TotalCost}" ></Label>
                            <Text  text="{CustomerModel>TotalCost}"></Text>
                            <Label text="{i18n>PossibleMineralReport}"></Label>
                            <Text  text="{CustomerModel>PossibleMineralReport}"></Text>
                            <Label text="{i18n>NumberOfDrills}" ></Label>
                            <Text  text="{CustomerModel>NumberOfDrills}"></Text>
                            <Label text="{i18n>TypeOfMineral}" ></Label>
                            <Text  text="{CustomerModel>TypeOfMineral}"></Text>
    </f:content>
 
        </f:SimpleForm>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button icon="sap-icon://edit" type="Critical" text="{i18n>Update}" press="onUpdate" width="200px"></Button>
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>